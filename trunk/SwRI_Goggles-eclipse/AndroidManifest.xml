<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ttu_swri.goggles"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:name="edu.ttu.swri.messenger.AppContext" >
        <activity
            android:name="com.ttu_swri.goggles.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ttu_swri.goggles.sandbox.AlejandroSandboxActivity"
            android:label="@string/title_activity_aleja_sandbox" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ttu_swri.goggles.MainActivity" />
        </activity>
        <activity
            android:name="com.ttu_swri.goggles.sandbox.AotuoSandboxActivity"
            android:label="@string/title_activity_aotuo_sandbox" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ttu_swri.goggles.MainActivity" />
        </activity>
        <activity
            android:name="com.ttu_swri.goggles.sandbox.JakubSandboxActivity"
            android:label="@string/title_activity_jakub_sandbox" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ttu_swri.goggles.MainActivity" />
        </activity>
        <activity
            android:name="com.ttu_swri.goggles.sandbox.SebastianSandboxActivity"
            android:label="@string/title_activity_sebas_sandbox" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ttu_swri.goggles.MainActivity" />
        </activity>
        <activity
            android:name="com.ttu_swri.goggles.GogglesMainActivity"
            android:label="@string/title_activity_goggles_main" >
        </activity>
        <activity
            android:name="org.ttu_swri.goggles.ui.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="org.ttu_swri.goggles.ui.POIActivity"
            android:label="@string/title_activity_poi" >
        </activity>
        <activity
            android:name="org.ttu_swri.goggles.ui.CurrentLocationActivity"
            android:label="@string/title_activity_current_location" >
        </activity>
        <activity
            android:name="org.ttu_swri.goggles.ui.FriendsLocationActivity"
            android:label="@string/title_activity_friends_location" >
        </activity>
        <activity
            android:name="org.ttu_swri.goggles.ui.MessagesActivity"
            android:label="@string/title_activity_messages" >
        </activity>
        <activity
            android:name="org.ttu_swri.goggles.ui.TabViewActivity"
            android:label="@string/tab_view_activity" >
        </activity>
        <service android:name="edu.ttu.swri.messenger.location.LocationUpdateService"></service>
        <service android:name="edu.ttu.swri.messenger.FriendUpdateService"></service>         
        <service
            android:name="com.ttu_swri.goggles.network.NetworkSyncService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.ttu_swri.goggles.network.NETWORK_SYNC_SERVICE" />
            </intent-filter>
        </service>

        <activity
            android:name="org.ttu_swri.goggles.ui.SendMessage"
            android:label="@string/title_activity_send_message" >
        </activity>
        <service android:name="edu.ttu.swri.messenger.MessageUpdateService"></service>
    </application>

</manifest>